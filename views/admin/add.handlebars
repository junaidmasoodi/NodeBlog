<h1>Add Project</h1>
<form method="post" action="/admin/add" enctype="multipart/form-data">
  <div class="form-group">
    <label>Title</label>
    <input type="text" class="form-control" name="title" placeholder="Title">
  </div>
  <div class="form-group">
    <label>Category</label>
    <input type="text" class="form-control" name="service" placeholder="Category">
  </div>
  <div class="form-group">
    <label>Author</label>
    <input type="text" class="form-control" name="client" placeholder="Author">
  </div>
  <div class="form-group">
    <label>Write up</label>
    <textarea class="form-control" name="description"></textarea>
  </div>
   <div class="form-group">
    <label>Read more on</label>
    <input type="text" class="form-control" name="url" placeholder="Read more on">
  </div>
  <div class="form-group">
    <label>Project Date</label>
    <input type="date" class="form-control" name="projectdate">
  </div>
  <div class="form-group">
    <label>Image</label>
    <input type="file" class="form-control" name="projectimage">
  </div>
  <button type="submit" class="button">Finish Writing</button>
</form>